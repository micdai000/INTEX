<section class="relative h-[400px] md:h-[500px] lg:h-[600px] w-full overflow-hidden">
  <div class="absolute inset-0 bg-center hero-bg" style="background-image: url('/images/hero-housing.jpg');">
    <div class="absolute inset-0 bg-gradient-to-r from-primary/80 to-primary/40"></div>
  </div>
  
  <div class="relative z-10 container mx-auto px-4 h-full flex flex-col justify-center items-center text-center">
    <h1 class="text-4xl md:text-5xl font-bold text-white mb-4">
      Find Your Perfect Student Housing
    </h1>
    <p class="text-xl text-white/90 max-w-2xl">
      Buy and sell housing contracts for BYU and UVU students
    </p>
  </div>
</section>

<div class="container mx-auto px-4">
  <div class="w-full bg-card border rounded-xl shadow-lg p-6 -mt-10 relative z-20">
    <form action="/" method="GET" class="grid grid-cols-1 md:grid-cols-4 gap-4">
      <div class="space-y-2">
        <label for="university" class="text-sm font-medium">University</label>
        <select id="university" name="university" class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm">
          <option value="">All</option>
          <option value="BYU" <%= typeof query !== 'undefined' && query.university === 'BYU' ? 'selected' : '' %>>BYU</option>
          <option value="UVU" <%= typeof query !== 'undefined' && query.university === 'UVU' ? 'selected' : '' %>>UVU</option>
        </select>
      </div>
      
      <div class="space-y-2">
        <label for="gender" class="text-sm font-medium">Gender</label>
        <select id="gender" name="gender" class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm">
          <option value="">Any</option>
          <option value="Male" <%= typeof query !== 'undefined' && query.gender === 'Male' ? 'selected' : '' %>>Male</option>
          <option value="Female" <%= typeof query !== 'undefined' && query.gender === 'Female' ? 'selected' : '' %>>Female</option>
        </select>
      </div>
      
      <div class="space-y-2">
        <label for="maxPrice" class="text-sm font-medium">Max Price</label>
        <input id="maxPrice" name="maxPrice" type="number" placeholder="$500" class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm" value="<%= typeof query !== 'undefined' && query.maxPrice ? query.maxPrice : '' %>">
      </div>
      
      <div class="flex items-end">
        <button type="submit" class="w-full inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90">
          <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
          </svg>
          Search
        </button>
      </div>
    </form>
  </div>
  
  <section class="py-12">
    <h2 class="text-3xl font-bold mb-8">Recent Listings</h2>
    <% if (listings && listings.length > 0) { %>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        <% listings.forEach(listing => { %>
          <div class="group overflow-hidden rounded-lg border bg-card transition-all hover:shadow-lg cursor-pointer">
            <a href="/listings/<%= listing.listing_id %>">
              <div class="aspect-[4/3] overflow-hidden">
                <img 
                  src="<%= listing.image_url_1 || '/images/apartment-1.jpg' %>" 
                  alt="<%= listing.title %>"
                  class="h-full w-full object-cover transition-transform group-hover:scale-105"
                  onerror="this.src='/images/apartment-1.jpg'"
                />
              </div>
              <div class="p-4">
                <h3 class="font-semibold text-lg mb-2 line-clamp-2"><%= listing.title %></h3>
                <p class="text-2xl font-bold text-primary mb-3">$<%= listing.rent_price %>/month</p>
                <div class="flex flex-wrap gap-2">
                  <span class="inline-flex items-center rounded-md bg-secondary/10 px-2.5 py-0.5 text-xs font-semibold text-secondary-foreground">
                    <%= listing.gender %>
                  </span>
                  <span class="inline-flex items-center rounded-md border border-border px-2.5 py-0.5 text-xs font-semibold">
                    <%= listing.university_proximity %>
                  </span>
                  <% if (listing.is_private_room) { %>
                    <span class="inline-flex items-center rounded-md bg-primary px-2.5 py-0.5 text-xs font-semibold text-primary-foreground">
                      Private
                    </span>
                  <% } %>
                </div>
              </div>
              <div class="p-4 pt-0">
                <a href="/listings/<%= listing.listing_id %>" class="w-full inline-flex items-center justify-center rounded-md border border-input bg-background px-4 py-2 text-sm font-medium hover:bg-accent hover:text-accent-foreground">
                  View Details
                </a>
              </div>
            </a>
          </div>
        <% }); %>
      </div>
    <% } else { %>
      <p class="text-center text-muted-foreground py-12">No listings found. Be the first to post!</p>
    <% } %>
  </section>
</div>

