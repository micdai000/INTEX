<div class="bg-muted/30">
  <div class="container mx-auto px-4 py-8">
    <div class="mb-8 flex items-center justify-between">
      <div>
        <h1 class="text-3xl font-bold">My Dashboard</h1>
        <p class="text-muted-foreground">Welcome back, <%= user.username %>!</p>
      </div>
      <a href="/listings/create/new" class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90">
        Post New Contract
      </a>
    </div>

    <div class="bg-card border rounded-lg shadow-lg">
      <div class="p-6">
        <h2 class="text-xl font-bold mb-4">My Listings</h2>
        <% if (listings && listings.length > 0) { %>
          <div class="space-y-4">
            <% listings.forEach(listing => { %>
              <div class="flex items-center justify-between p-4 border rounded-lg bg-card">
                <div class="flex-1">
                  <h3 class="font-semibold text-lg"><%= listing.title %></h3>
                  <div class="flex gap-4 mt-2 text-sm text-muted-foreground">
                    <span>$<%= listing.rent_price %>/month</span>
                    <span><%= listing.gender %></span>
                    <span><%= listing.university_proximity %></span>
                  </div>
                </div>
                <div class="flex gap-2">
                  <a href="/listings/<%= listing.listing_id %>" class="inline-flex items-center justify-center rounded-md border border-input bg-background px-3 py-2 text-sm font-medium hover:bg-accent hover:text-accent-foreground">
                    View
                  </a>
                  <button 
                    onclick="deleteListing(<%= listing.listing_id %>)"
                    class="inline-flex items-center justify-center rounded-md bg-destructive px-3 py-2 text-sm font-medium text-destructive-foreground hover:bg-destructive/90">
                    Delete
                  </button>
                </div>
              </div>
            <% }); %>
          </div>
        <% } else { %>
          <div class="text-center py-8">
            <p class="text-muted-foreground mb-4">
              You haven't posted any listings yet.
            </p>
            <a href="/listings/create/new" class="inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90">
              Create Your First Listing
            </a>
          </div>
        <% } %>
      </div>
    </div>
  </div>
</div>

<script>
async function deleteListing(listingId) {
  if (!confirm('Are you sure you want to delete this listing?')) return;

  try {
    const response = await fetch(`/listings/${listingId}`, {
      method: 'DELETE',
      headers: {
        'Content-Type': 'application/json',
      },
    });

    if (response.ok) {
      location.reload();
    } else {
      alert('Failed to delete listing');
    }
  } catch (error) {
    console.error('Error:', error);
    alert('Failed to delete listing');
  }
}
</script>

