<div class="bg-muted/30">
  <div class="container mx-auto px-4 py-8">
    <div class="max-w-3xl mx-auto bg-card border rounded-lg shadow-lg">
      <div class="p-6">
        <h1 class="text-3xl font-bold mb-2">Post Your Housing Contract</h1>
        <p class="text-muted-foreground mb-6">
          Fill out the details below to list your housing contract
        </p>

        <form action="/listings/create" method="POST" class="space-y-6">
          <div class="space-y-2">
            <label for="title" class="text-sm font-medium">Apartment Complex Name *</label>
            <input
              id="title"
              name="title"
              type="text"
              placeholder="e.g., Heritage Halls"
              class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
              required
            />
          </div>

          <div class="space-y-2">
            <label for="description" class="text-sm font-medium">Detailed Description *</label>
            <textarea
              id="description"
              name="description"
              placeholder="Describe your apartment, roommates, location, etc."
              rows="6"
              class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
              required
            ></textarea>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="space-y-2">
              <label for="rent_price" class="text-sm font-medium">Monthly Rent Price ($) *</label>
              <input
                id="rent_price"
                name="rent_price"
                type="number"
                placeholder="450"
                class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
                required
              />
            </div>

            <div class="space-y-2">
              <label for="university_proximity" class="text-sm font-medium">University *</label>
              <select id="university_proximity" name="university_proximity" class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm" required>
                <option value="">Select university</option>
                <option value="BYU">BYU</option>
                <option value="UVU">UVU</option>
              </select>
            </div>
          </div>

          <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <div class="space-y-2">
              <label for="gender" class="text-sm font-medium">Contract Gender *</label>
              <select id="gender" name="gender" class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm" required>
                <option value="">Select gender</option>
                <option value="Male">Male</option>
                <option value="Female">Female</option>
                <option value="Any">Any</option>
              </select>
            </div>

            <div class="space-y-2">
              <label for="contract_term" class="text-sm font-medium">Contract Term *</label>
              <select id="contract_term" name="contract_term" class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm" required>
                <option value="">Select term</option>
                <option value="Fall/Winter">Fall/Winter</option>
                <option value="Spring/Summer">Spring/Summer</option>
                <option value="Year-Long">Year-Long</option>
              </select>
            </div>
          </div>

          <div class="space-y-3">
            <label class="text-sm font-medium">Amenities</label>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
              <% amenities.forEach(amenity => { %>
                <div class="flex items-center space-x-2">
                  <input
                    type="checkbox"
                    id="amenity_<%= amenity.amenity_id %>"
                    name="amenities"
                    value="<%= amenity.name %>"
                    class="rounded border-gray-300"
                  />
                  <label for="amenity_<%= amenity.amenity_id %>" class="text-sm font-normal cursor-pointer">
                    <%= amenity.name %>
                  </label>
                </div>
              <% }); %>
            </div>
          </div>

          <div class="space-y-3">
            <label class="text-sm font-medium">Private Room</label>
            <div class="flex items-center space-x-2">
              <input
                type="checkbox"
                id="is_private_room"
                name="is_private_room"
                class="rounded border-gray-300"
              />
              <label for="is_private_room" class="text-sm font-normal cursor-pointer">
                This is a private room
              </label>
            </div>
          </div>

          <div class="space-y-3">
            <label class="text-sm font-medium">Image URLs (Optional)</label>
            <input
              type="url"
              name="image_url_1"
              placeholder="Image URL 1"
              class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
            />
            <input
              type="url"
              name="image_url_2"
              placeholder="Image URL 2"
              class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
            />
            <input
              type="url"
              name="image_url_3"
              placeholder="Image URL 3"
              class="w-full rounded-md border border-input bg-background px-3 py-2 text-sm"
            />
            <p class="text-xs text-muted-foreground">
              Enter URLs of images showing your apartment
            </p>
          </div>

          <div class="flex gap-4 pt-4">
            <button type="submit" class="flex-1 inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90">
              Submit Listing
            </button>
            <a href="/" class="inline-flex items-center justify-center rounded-md border border-input bg-background px-4 py-2 text-sm font-medium hover:bg-accent hover:text-accent-foreground">
              Cancel
            </a>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>

