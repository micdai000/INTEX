<div class="container mx-auto px-4 py-8">
  <nav class="mb-6 text-sm text-muted-foreground">
    <a href="/" class="hover:text-primary">Home</a>
    <span class="mx-2">/</span>
    <span><%= listing.title %></span>
  </nav>

  <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
    <div class="lg:col-span-2 space-y-6">
      <% if (listing.image_url_1) { %>
        <div class="aspect-video overflow-hidden rounded-lg">
          <img 
            src="<%= listing.image_url_1 %>" 
            alt="<%= listing.title %>"
            class="h-full w-full object-cover"
            onerror="this.src='/images/apartment-1.jpg'"
          />
        </div>
        <% if (listing.image_url_2 || listing.image_url_3) { %>
          <div class="grid grid-cols-2 gap-4">
            <% if (listing.image_url_2) { %>
              <img 
                src="<%= listing.image_url_2 %>" 
                alt="<%= listing.title %>"
                class="aspect-video w-full object-cover rounded-lg"
                onerror="this.src='/images/apartment-2.jpg'"
              />
            <% } %>
            <% if (listing.image_url_3) { %>
              <img 
                src="<%= listing.image_url_3 %>" 
                alt="<%= listing.title %>"
                class="aspect-video w-full object-cover rounded-lg"
                onerror="this.src='/images/apartment-3.jpg'"
              />
            <% } %>
          </div>
        <% } %>
      <% } else { %>
        <div class="aspect-video overflow-hidden rounded-lg bg-muted">
          <img 
            src="/images/apartment-1.jpg" 
            alt="<%= listing.title %>"
            class="h-full w-full object-cover"
          />
        </div>
      <% } %>

      <div>
        <h1 class="text-3xl font-bold mb-2"><%= listing.title %></h1>
        <p class="text-3xl font-bold text-primary mb-4">
          $<%= listing.rent_price %>/month <span class="text-lg text-muted-foreground">OBO</span>
        </p>
      </div>

      <div class="grid grid-cols-2 md:grid-cols-4 gap-4">
        <div class="bg-card border rounded-lg p-4 flex items-center gap-3">
          <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 4.354a4 4 0 110 5.292M15 21H3v-1a6 6 0 0112 0v1zm0 0h6v-1a6 6 0 00-9-5.197M13 7a4 4 0 11-8 0 4 4 0 018 0z" />
          </svg>
          <div>
            <p class="text-xs text-muted-foreground">Gender</p>
            <p class="font-semibold"><%= listing.gender %></p>
          </div>
        </div>
        <div class="bg-card border rounded-lg p-4 flex items-center gap-3">
          <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <div>
            <p class="text-xs text-muted-foreground">University</p>
            <p class="font-semibold"><%= listing.university_proximity %></p>
          </div>
        </div>
        <div class="bg-card border rounded-lg p-4 flex items-center gap-3">
          <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z" />
          </svg>
          <div>
            <p class="text-xs text-muted-foreground">Contract</p>
            <p class="font-semibold text-sm"><%= listing.contract_term || 'N/A' %></p>
          </div>
        </div>
        <div class="bg-card border rounded-lg p-4 flex items-center gap-3">
          <svg class="h-5 w-5 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 12l2-2m0 0l7-7 7 7M5 10v10a1 1 0 001 1h3m10-11l2 2m-2-2v10a1 1 0 01-1 1h-3m-6 0a1 1 0 001-1v-4a1 1 0 011-1h2a1 1 0 011 1v4a1 1 0 001 1m-6 0h6" />
          </svg>
          <div>
            <p class="text-xs text-muted-foreground">Room Type</p>
            <p class="font-semibold"><%= listing.is_private_room ? 'Private' : 'Shared' %></p>
          </div>
        </div>
      </div>

      <div class="bg-card border rounded-lg p-6">
        <h2 class="text-xl font-bold mb-4">Description</h2>
        <p class="text-muted-foreground leading-relaxed"><%= listing.description || 'No description provided.' %></p>
      </div>

      <% if (listing.amenities && listing.amenities.length > 0) { %>
        <div class="bg-card border rounded-lg p-6">
          <h2 class="text-xl font-bold mb-4">Amenities</h2>
          <div class="grid grid-cols-1 md:grid-cols-2 gap-3">
            <% listing.amenities.forEach(amenity => { %>
              <div class="flex items-center gap-2">
                <div class="h-2 w-2 rounded-full bg-accent"></div>
                <span><%= amenity %></span>
              </div>
            <% }); %>
          </div>
        </div>
      <% } %>
    </div>

    <div class="lg:col-span-1">
      <div class="bg-card border rounded-lg p-6 space-y-6 sticky top-24">
        <div>
          <h3 class="text-xl font-bold mb-4">Contact Seller</h3>
          <div class="space-y-3">
            <p class="font-semibold text-lg"><%= listing.username || 'Unknown' %></p>
            <% if (listing.email) { %>
              <div class="flex items-center gap-2 text-muted-foreground">
                <svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                </svg>
                <a
                  href="mailto:<%= listing.email %>"
                  class="hover:text-primary transition-colors"
                >
                  <%= listing.email %>
                </a>
              </div>
            <% } %>
          </div>
        </div>

        <% if (listing.email) { %>
          <a 
            href="mailto:<%= listing.email %>"
            class="w-full inline-flex items-center justify-center rounded-md bg-primary px-4 py-2 text-sm font-medium text-primary-foreground hover:bg-primary/90"
          >
            <svg class="mr-2 h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
            </svg>
            Message Seller
          </a>
        <% } %>
      </div>
    </div>
  </div>
</div>

