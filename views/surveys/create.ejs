<!-- Create Survey -->
<section class="py-8">
  <div class="container px-4 md:px-6">
    <div class="mb-6">
      <a href="/surveys" class="text-sm text-ella-coral hover:underline">&larr; Back to Surveys</a>
    </div>

    <div class="max-w-2xl mx-auto">
      <div class="card">
        <div class="card-header">
          <h1 class="text-2xl font-serif">Add Survey Response</h1>
        </div>
        <div class="card-body">
          <form method="POST" action="/surveys">
            <div class="form-group">
              <label for="registration" class="form-label">Select Registration *</label>
              <select id="registration" name="registration" class="form-select" required onchange="updateHiddenFields(this)">
                <option value="">Select a registration...</option>
                <% registrations.forEach(r => { %>
                  <option value="<%= r.person_id %>|<%= r.event_occurrence_id %>">
                    <%= r.first_name %> <%= r.last_name %> - <%= r.event_name %>
                  </option>
                <% }); %>
              </select>
              <input type="hidden" id="person_id" name="person_id">
              <input type="hidden" id="event_occurrence_id" name="event_occurrence_id">
            </div>

            <div class="grid md:grid-cols-2 gap-4">
              <div class="form-group">
                <label for="survey_satisfaction_score" class="form-label">Satisfaction (1-5)</label>
                <input type="number" id="survey_satisfaction_score" name="survey_satisfaction_score" class="form-input" min="1" max="5" step="0.1">
              </div>
              <div class="form-group">
                <label for="survey_usefulness_score" class="form-label">Usefulness (1-5)</label>
                <input type="number" id="survey_usefulness_score" name="survey_usefulness_score" class="form-input" min="1" max="5" step="0.1">
              </div>
              <div class="form-group">
                <label for="survey_instructor_score" class="form-label">Instructor (1-5)</label>
                <input type="number" id="survey_instructor_score" name="survey_instructor_score" class="form-input" min="1" max="5" step="0.1">
              </div>
              <div class="form-group">
                <label for="survey_recommendation_score" class="form-label">Recommendation (1-5)</label>
                <input type="number" id="survey_recommendation_score" name="survey_recommendation_score" class="form-input" min="1" max="5" step="0.1">
              </div>
            </div>

            <div class="form-group">
              <label for="survey_comments" class="form-label">Comments</label>
              <textarea id="survey_comments" name="survey_comments" class="form-input" rows="4"></textarea>
            </div>

            <div class="flex gap-4 mt-6">
              <button type="submit" class="btn-primary">Save Survey</button>
              <a href="/surveys" class="btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>

<script>
function updateHiddenFields(select) {
  const value = select.value;
  if (value) {
    const [personId, occurrenceId] = value.split('|');
    document.getElementById('person_id').value = personId;
    document.getElementById('event_occurrence_id').value = occurrenceId;
  }
}
</script>
