<!-- Edit Survey -->
<section class="py-8">
  <div class="container px-4 md:px-6">
    <div class="mb-6">
      <a href="/surveys/<%= survey.person_id %>/<%= survey.event_occurrence_id %>" class="text-sm text-ella-coral hover:underline">&larr; Back to Survey</a>
    </div>

    <div class="max-w-2xl mx-auto">
      <div class="card">
        <div class="card-header">
          <h1 class="text-2xl font-serif">Edit Survey</h1>
          <p class="text-sm text-gray-600 mt-1"><%= survey.first_name %> <%= survey.last_name %> - <%= survey.event_name %></p>
        </div>
        <div class="card-body">
          <form method="POST" action="/surveys/<%= survey.person_id %>/<%= survey.event_occurrence_id %>">
            <div class="grid md:grid-cols-2 gap-4">
              <div class="form-group">
                <label for="survey_satisfaction_score" class="form-label">Satisfaction (1-5)</label>
                <input type="number" id="survey_satisfaction_score" name="survey_satisfaction_score" class="form-input" min="1" max="5" step="0.1" value="<%= survey.survey_satisfaction_score || '' %>">
              </div>
              <div class="form-group">
                <label for="survey_usefulness_score" class="form-label">Usefulness (1-5)</label>
                <input type="number" id="survey_usefulness_score" name="survey_usefulness_score" class="form-input" min="1" max="5" step="0.1" value="<%= survey.survey_usefulness_score || '' %>">
              </div>
              <div class="form-group">
                <label for="survey_instructor_score" class="form-label">Instructor (1-5)</label>
                <input type="number" id="survey_instructor_score" name="survey_instructor_score" class="form-input" min="1" max="5" step="0.1" value="<%= survey.survey_instructor_score || '' %>">
              </div>
              <div class="form-group">
                <label for="survey_recommendation_score" class="form-label">Recommendation (1-5)</label>
                <input type="number" id="survey_recommendation_score" name="survey_recommendation_score" class="form-input" min="1" max="5" step="0.1" value="<%= survey.survey_recommendation_score || '' %>">
              </div>
            </div>

            <div class="form-group">
              <label for="survey_comments" class="form-label">Comments</label>
              <textarea id="survey_comments" name="survey_comments" class="form-input" rows="4"><%= survey.survey_comments || '' %></textarea>
            </div>

            <div class="flex gap-4 mt-6">
              <button type="submit" class="btn-primary">Save Changes</button>
              <a href="/surveys/<%= survey.person_id %>/<%= survey.event_occurrence_id %>" class="btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
