<!-- Edit Participant -->
<section class="py-8">
  <div class="container px-4 md:px-6">
    <div class="mb-6">
      <a href="/participants/<%= participant.person_id %>" class="text-sm text-ella-coral hover:underline">&larr; Back to Participant</a>
    </div>

    <div class="max-w-2xl mx-auto">
      <div class="card">
        <div class="card-header">
          <h1 class="text-2xl font-serif">Edit Participant</h1>
        </div>
        <div class="card-body">
          <form method="POST" action="/participants/<%= participant.person_id %>">
            <div class="grid md:grid-cols-2 gap-4">
              <div class="form-group">
                <label for="first_name" class="form-label">First Name *</label>
                <input type="text" id="first_name" name="first_name" class="form-input" value="<%= participant.first_name %>" required>
              </div>
              <div class="form-group">
                <label for="last_name" class="form-label">Last Name *</label>
                <input type="text" id="last_name" name="last_name" class="form-input" value="<%= participant.last_name %>" required>
              </div>
            </div>

            <div class="form-group">
              <label for="email" class="form-label">Email *</label>
              <input type="email" id="email" name="email" class="form-input" value="<%= participant.email %>" required>
            </div>

            <div class="grid md:grid-cols-2 gap-4">
              <div class="form-group">
                <label for="phone" class="form-label">Phone</label>
                <input type="tel" id="phone" name="phone" class="form-input" value="<%= participant.phone || '' %>">
              </div>
              <div class="form-group">
                <label for="dob" class="form-label">Date of Birth</label>
                <input type="date" id="dob" name="dob" class="form-input" value="<%= participant.dob ? new Date(participant.dob).toISOString().split('T')[0] : '' %>">
              </div>
            </div>

            <div class="grid md:grid-cols-3 gap-4">
              <div class="form-group">
                <label for="city" class="form-label">City</label>
                <input type="text" id="city" name="city" class="form-input" value="<%= participant.city || '' %>">
              </div>
              <div class="form-group">
                <label for="state" class="form-label">State</label>
                <input type="text" id="state" name="state" class="form-input" maxlength="10" value="<%= participant.state || '' %>">
              </div>
              <div class="form-group">
                <label for="zip" class="form-label">ZIP Code</label>
                <input type="text" id="zip" name="zip" class="form-input" value="<%= participant.zip || '' %>">
              </div>
            </div>

            <div class="grid md:grid-cols-2 gap-4">
              <div class="form-group">
                <label for="school_or_employer" class="form-label">School/Employer</label>
                <input type="text" id="school_or_employer" name="school_or_employer" class="form-input" value="<%= participant.school_or_employer || '' %>">
              </div>
              <div class="form-group">
                <label for="field_of_interest" class="form-label">Field of Interest</label>
                <select id="field_of_interest" name="field_of_interest" class="form-select">
                  <option value="">Select...</option>
                  <option value="STEM" <%= participant.field_of_interest === 'STEM' ? 'selected' : '' %>>STEM</option>
                  <option value="Arts" <%= participant.field_of_interest === 'Arts' ? 'selected' : '' %>>Arts</option>
                  <option value="Both" <%= participant.field_of_interest === 'Both' ? 'selected' : '' %>>Both</option>
                </select>
              </div>
            </div>

            <div class="flex gap-4 mt-6">
              <button type="submit" class="btn-primary">Save Changes</button>
              <a href="/participants/<%= participant.person_id %>" class="btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
