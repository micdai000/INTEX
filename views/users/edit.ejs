<!-- Edit User -->
<section class="py-8">
  <div class="container px-4 md:px-6">
    <div class="mb-6">
      <a href="/users" class="text-sm text-ella-coral hover:underline">&larr; Back to Users</a>
    </div>

    <div class="max-w-lg mx-auto">
      <div class="card">
        <div class="card-header">
          <h1 class="text-2xl font-serif">Edit User</h1>
        </div>
        <div class="card-body">
          <form method="POST" action="/users/<%= editUser.user_id %>">
            <div class="grid md:grid-cols-2 gap-4">
              <div class="form-group">
                <label for="first_name" class="form-label">First Name *</label>
                <input type="text" id="first_name" name="first_name" class="form-input" value="<%= editUser.first_name || '' %>" required>
              </div>
              <div class="form-group">
                <label for="last_name" class="form-label">Last Name *</label>
                <input type="text" id="last_name" name="last_name" class="form-input" value="<%= editUser.last_name || '' %>" required>
              </div>
            </div>

            <div class="form-group">
              <label for="email" class="form-label">Email *</label>
              <input type="email" id="email" name="email" class="form-input" value="<%= editUser.email %>" required>
            </div>

            <div class="form-group">
              <label for="password" class="form-label">New Password</label>
              <input type="password" id="password" name="password" class="form-input" minlength="6" placeholder="Leave blank to keep current password">
            </div>

            <div class="form-group">
              <label for="role" class="form-label">Role *</label>
              <select id="role" name="role" class="form-select" required>
                <option value="common" <%= editUser.role === 'common' ? 'selected' : '' %>>Common User</option>
                <option value="manager" <%= editUser.role === 'manager' ? 'selected' : '' %>>Manager</option>
              </select>
            </div>

            <div class="flex gap-4 mt-6">
              <button type="submit" class="btn-primary">Save Changes</button>
              <a href="/users" class="btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
