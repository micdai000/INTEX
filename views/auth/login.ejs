<!-- Login Page - Modern Clean Design -->
<section class="section" style="min-height: 100vh; display: flex; align-items: center; background: var(--ella-cream); padding-top: 6rem;">
  <div class="container">
    <div style="max-width: 400px; margin: 0 auto;">
      <!-- Logo -->
      <div style="display: flex; flex-direction: column; align-items: center; margin-bottom: 2rem;">
        <img src="/images/mainlogo.avif" alt="Ella Rises" style="width: 100px; height: auto; margin-bottom: 1.5rem; display: block;">
        <h1 style="font-family: 'DM Serif Display', serif; font-size: 1.875rem; margin-bottom: 0.5rem; text-align: center;">Welcome Back</h1>
        <p style="color: var(--ella-gray); text-align: center;">Sign in to access your dashboard</p>
      </div>

      <!-- Login Card -->
      <div class="card">
        <div class="card-body" style="padding: 2rem;">
          <form method="POST" action="/auth/login">
            <div class="form-group">
              <label for="email" class="form-label">Email Address</label>
              <input
                type="email"
                id="email"
                name="email"
                class="form-input"
                placeholder="you@example.com"
                required
                autocomplete="email"
              >
            </div>

            <div class="form-group">
              <label for="password" class="form-label">Password</label>
              <input
                type="password"
                id="password"
                name="password"
                class="form-input"
                placeholder="Enter your password"
                required
                autocomplete="current-password"
              >
            </div>

            <button type="submit" class="btn-primary w-full btn-lg" style="margin-top: 0.5rem;">
              Sign In
            </button>
          </form>
        </div>
      </div>

      <!-- Back Link -->
      <div style="text-align: center; margin-top: 1.5rem;">
        <a href="/" style="color: var(--ella-coral); font-size: 0.875rem; text-decoration: none;">
          &larr; Back to Home
        </a>
      </div>
    </div>
  </div>
</section>
