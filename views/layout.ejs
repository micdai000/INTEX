<!DOCTYPE html>
<%
  // Pages with hero sections get maroon background, others get cream
  const isHeroPage = typeof title !== 'undefined' && (
    title.startsWith('Ella Rises -') ||
    title.includes('About') ||
    title.includes('Programs') ||
    title.includes('Workshops')
  );
  const themeColor = isHeroPage ? '#8B2346' : '#FFFBF8';
%>
<html lang="en" style="background-color: <%= themeColor %>;">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Ella Rises' %></title>
  <meta name="description" content="Ella Rises empowers women through STEAM education, mentoring, and creative workshops.">
  <!-- Theme color - matches page type -->
  <meta name="theme-color" content="<%= themeColor %>">
  <meta name="theme-color" content="<%= themeColor %>" media="(prefers-color-scheme: light)">
  <meta name="theme-color" content="<%= themeColor %>" media="(prefers-color-scheme: dark)">
  <meta name="color-scheme" content="light only">
  <meta name="apple-mobile-web-app-capable" content="yes">
  <meta name="apple-mobile-web-app-status-bar-style" content="default">

  <!-- Favicon - Ella Rises Logo -->
  <link rel="icon" type="image/png" href="/images/ella-logo.png">
  <link rel="apple-touch-icon" href="/images/ella-logo.png">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Tailwind CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="min-h-screen flex flex-col bg-ella-cream text-ella-charcoal font-montserrat">
  <!-- Skip Navigation Link for ADA Compliance -->
  <a href="#main-content" class="skip-link">Skip to main content</a>

  <%- include('partials/header') %>

  <main class="flex-1" id="main-content" role="main">
    <!-- Flash Messages (hidden on auth/contact pages since they show inline) -->
    <% const isInlinePage = typeof title !== 'undefined' && (title.includes('Login') || title.includes('Sign Up') || title.includes('Contact')); %>
    <% if (!isInlinePage && success && success.length > 0) { %>
      <div class="flash-message flash-success" role="alert">
        <div class="container">
          <span><%= success %></span>
          <button onclick="this.parentElement.parentElement.style.display='none'" class="flash-close">&times;</button>
        </div>
      </div>
    <% } %>
    <% if (!isInlinePage && error && error.length > 0) { %>
      <div class="flash-message flash-error" role="alert">
        <div class="container">
          <span><%= error %></span>
          <button onclick="this.parentElement.parentElement.style.display='none'" class="flash-close">&times;</button>
        </div>
      </div>
    <% } %>

    <%- body %>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
