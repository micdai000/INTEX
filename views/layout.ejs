<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= typeof title !== 'undefined' ? title : 'Ella Rises' %></title>
  <meta name="description" content="Ella Rises empowers women through STEAM education, mentoring, and creative workshops.">

  <!-- Google Fonts -->
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=DM+Serif+Display&family=Montserrat:wght@400;500;600;700&display=swap" rel="stylesheet">

  <!-- Tailwind CSS -->
  <link rel="stylesheet" href="/css/style.css">
</head>
<body class="min-h-screen flex flex-col bg-ella-cream text-ella-charcoal font-montserrat">
  <%- include('partials/header') %>

  <main class="flex-1">
    <!-- Flash Messages -->
    <% if (success && success.length > 0) { %>
      <div class="flash-message flash-success" role="alert">
        <div class="container">
          <span><%= success %></span>
          <button onclick="this.parentElement.parentElement.style.display='none'" class="flash-close">&times;</button>
        </div>
      </div>
    <% } %>
    <% if (error && error.length > 0) { %>
      <div class="flash-message flash-error" role="alert">
        <div class="container">
          <span><%= error %></span>
          <button onclick="this.parentElement.parentElement.style.display='none'" class="flash-close">&times;</button>
        </div>
      </div>
    <% } %>

    <%- body %>
  </main>

  <%- include('partials/footer') %>
</body>
</html>
