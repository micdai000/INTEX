<!-- Edit Milestone -->
<section class="py-8">
  <div class="container px-4 md:px-6">
    <div class="mb-6">
      <a href="/milestones" class="text-sm text-ella-coral hover:underline">&larr; Back to Milestones</a>
    </div>

    <div class="max-w-lg mx-auto">
      <div class="card">
        <div class="card-header">
          <h1 class="text-2xl font-serif">Edit Milestone</h1>
          <p class="text-sm text-gray-600 mt-1"><%= milestone.first_name %> <%= milestone.last_name %></p>
        </div>
        <div class="card-body">
          <form method="POST" action="/milestones/<%= milestone.person_id %>/<%= milestone.milestone_no %>">
            <div class="form-group">
              <label for="milestone_title" class="form-label">Milestone Title *</label>
              <input type="text" id="milestone_title" name="milestone_title" class="form-input" value="<%= milestone.milestone_title %>" required>
            </div>

            <div class="form-group">
              <label for="milestone_date" class="form-label">Date Achieved</label>
              <input type="date" id="milestone_date" name="milestone_date" class="form-input" value="<%= milestone.milestone_date ? new Date(milestone.milestone_date).toISOString().split('T')[0] : '' %>">
            </div>

            <div class="flex gap-4 mt-6">
              <button type="submit" class="btn-primary">Save Changes</button>
              <a href="/milestones" class="btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
