<!-- Create Milestone -->
<section class="py-8">
  <div class="container px-4 md:px-6">
    <div class="mb-6">
      <a href="/milestones" class="text-sm text-ella-coral hover:underline">&larr; Back to Milestones</a>
    </div>

    <div class="max-w-lg mx-auto">
      <div class="card">
        <div class="card-header">
          <h1 class="text-2xl font-serif">Add Milestone</h1>
        </div>
        <div class="card-body">
          <form method="POST" action="/milestones">
            <div class="form-group">
              <label for="person_id" class="form-label">Participant *</label>
              <select id="person_id" name="person_id" class="form-select" required>
                <option value="">Select participant...</option>
                <% participants.forEach(p => { %>
                  <option value="<%= p.person_id %>" <%= preselectedPersonId == p.person_id ? 'selected' : '' %>>
                    <%= p.first_name %> <%= p.last_name %> (<%= p.email %>)
                  </option>
                <% }); %>
              </select>
            </div>

            <div class="form-group">
              <label for="milestone_title" class="form-label">Milestone Title *</label>
              <input type="text" id="milestone_title" name="milestone_title" class="form-input" required placeholder="e.g., Completed Python Course">
            </div>

            <div class="form-group">
              <label for="milestone_date" class="form-label">Date Achieved</label>
              <input type="date" id="milestone_date" name="milestone_date" class="form-input">
            </div>

            <% if (preselectedPersonId) { %>
              <input type="hidden" name="return_to_participant" value="true">
            <% } %>

            <div class="flex gap-4 mt-6">
              <button type="submit" class="btn-primary">Add Milestone</button>
              <a href="<%= preselectedPersonId ? `/participants/${preselectedPersonId}` : '/milestones' %>" class="btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
