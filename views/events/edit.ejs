<!-- Edit Event -->
<section class="py-8">
  <div class="container px-4 md:px-6">
    <div class="mb-6">
      <a href="/events/<%= event.event_id %>" class="text-sm text-ella-coral hover:underline">&larr; Back to Event</a>
    </div>

    <div class="max-w-2xl mx-auto">
      <div class="card">
        <div class="card-header">
          <h1 class="text-2xl font-serif">Edit Event</h1>
        </div>
        <div class="card-body">
          <form method="POST" action="/events/<%= event.event_id %>">
            <div class="form-group">
              <label for="event_name" class="form-label">Event Name *</label>
              <input type="text" id="event_name" name="event_name" class="form-input" value="<%= event.event_name %>" required>
            </div>

            <div class="grid md:grid-cols-2 gap-4">
              <div class="form-group">
                <label for="event_type" class="form-label">Event Type</label>
                <select id="event_type" name="event_type" class="form-select">
                  <option value="">Select...</option>
                  <option value="Workshop" <%= event.event_type === 'Workshop' ? 'selected' : '' %>>Workshop</option>
                  <option value="Mentoring" <%= event.event_type === 'Mentoring' ? 'selected' : '' %>>Mentoring</option>
                  <option value="Cultural" <%= event.event_type === 'Cultural' ? 'selected' : '' %>>Cultural</option>
                  <option value="STEAM" <%= event.event_type === 'STEAM' ? 'selected' : '' %>>STEAM</option>
                  <option value="Leadership" <%= event.event_type === 'Leadership' ? 'selected' : '' %>>Leadership</option>
                  <option value="Other" <%= event.event_type === 'Other' ? 'selected' : '' %>>Other</option>
                </select>
              </div>
              <div class="form-group">
                <label for="event_recurrence_pattern" class="form-label">Recurrence</label>
                <select id="event_recurrence_pattern" name="event_recurrence_pattern" class="form-select">
                  <option value="">One-time</option>
                  <option value="Weekly" <%= event.event_recurrence_pattern === 'Weekly' ? 'selected' : '' %>>Weekly</option>
                  <option value="Monthly" <%= event.event_recurrence_pattern === 'Monthly' ? 'selected' : '' %>>Monthly</option>
                  <option value="Quarterly" <%= event.event_recurrence_pattern === 'Quarterly' ? 'selected' : '' %>>Quarterly</option>
                  <option value="Annual" <%= event.event_recurrence_pattern === 'Annual' ? 'selected' : '' %>>Annual</option>
                </select>
              </div>
            </div>

            <div class="form-group">
              <label for="event_default_capacity" class="form-label">Default Capacity</label>
              <input type="number" id="event_default_capacity" name="event_default_capacity" class="form-input" min="1" value="<%= event.event_default_capacity || '' %>">
            </div>

            <div class="form-group">
              <label for="event_description" class="form-label">Description</label>
              <textarea id="event_description" name="event_description" class="form-input" rows="4"><%= event.event_description || '' %></textarea>
            </div>

            <div class="flex gap-4 mt-6">
              <button type="submit" class="btn-primary">Save Changes</button>
              <a href="/events/<%= event.event_id %>" class="btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
