<!-- Edit Donation -->
<section class="py-8">
  <div class="container px-4 md:px-6">
    <div class="mb-6">
      <a href="/donations" class="text-sm text-ella-coral hover:underline">&larr; Back to Donations</a>
    </div>

    <div class="max-w-lg mx-auto">
      <div class="card">
        <div class="card-header">
          <h1 class="text-2xl font-serif">Edit Donation</h1>
          <p class="text-sm text-gray-600 mt-1"><%= donation.first_name %> <%= donation.last_name %></p>
        </div>
        <div class="card-body">
          <form method="POST" action="/donations/<%= donation.donation_id %>">
            <div class="form-group">
              <label for="person_id" class="form-label">Donor *</label>
              <select id="person_id" name="person_id" class="form-select" required>
                <% persons.forEach(p => { %>
                  <option value="<%= p.person_id %>" <%= p.person_id === donation.person_id ? 'selected' : '' %>>
                    <%= p.first_name %> <%= p.last_name %> (<%= p.email %>)
                  </option>
                <% }); %>
              </select>
            </div>

            <div class="form-group">
              <label for="donation_amount" class="form-label">Amount *</label>
              <div class="input-group">
                <span class="input-prefix">$</span>
                <input type="number" id="donation_amount" name="donation_amount" class="form-input input-with-prefix" min="0.01" step="0.01" value="<%= donation.donation_amount %>" required>
              </div>
            </div>

            <div class="form-group">
              <label for="donation_date" class="form-label">Date *</label>
              <input type="date" id="donation_date" name="donation_date" class="form-input" value="<%= donation.donation_date || '' %>" required>
            </div>

            <div class="flex gap-4 mt-6">
              <button type="submit" class="btn-primary">Save Changes</button>
              <a href="/donations" class="btn-secondary">Cancel</a>
            </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</section>
